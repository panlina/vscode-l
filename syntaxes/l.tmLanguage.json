{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "l",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#conditional-expression"
		},
		{
			"include": "#punctuation-comma"
		},
		{
			"include": "#punctuation-semicolon"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.l",
				"match": "\\b(let|goto|while|do|break)\\b"
			}, {
				"name": "storage.type.l",
				"match": "\\bvar\\b"
			}]
		},
		"numbers": {
			"name": "constant.numeric.l",
			"match": "\\b[0-9]+\\b"
		},
		"strings": {
			"name": "string.quoted.double.l",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.l",
					"match": "\\\\."
				}
			]
		},
		"operators": {
			"name": "keyword.operator.l",
			"match": "\\b(\\+|-|\\*|/|<=|=|>=|<|!=|>|!|&|\\||\\.|@)\\b"
		},
		"conditional-expression": {
			"begin": "\\?",
			"beginCaptures": {
				"0": {
					"name": "keyword.operator.l"
				}
			},
			"end": ":",
			"endCaptures": {
				"0": {
					"name": "keyword.operator.l"
				}
			}
		},
		"punctuation-comma": {
			"name": "punctuation.separator.comma.l",
			"match": ","
		},
		"punctuation-semicolon": {
			"name": "punctuation.terminator.statement.l",
			"match": ";"
		}
	},
	"scopeName": "source.l"
}