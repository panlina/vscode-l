{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "l",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.l",
				"match": "\\b(let|var|goto|while|do|break)\\b"
			}]
		},
		"numbers": {
			"name": "constant.numeric.l",
			"match": "\\b[0-9]+\\b"
		},
		"strings": {
			"name": "string.quoted.double.l",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.l",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.l"
}